# Hunter.io API (Email validation and discovery)
# Get free API key from: https://hunter.io/api
HUNTER_API_KEY=your-hunter-io-key

# ====================================
# NETWORK INTELLIGENCE APIs
# ====================================

# Shodan API (Network and device intelligence)
# Get free API key from: https://shodan.io
SHODAN_API_KEY=your-shodan-api-key-here

# VirusTotal API (Threat intelligence)
# Get free API key from: https://virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=your-virustotal-key

# AbuseIPDB API (IP reputation checking)
# Get free API key from: https://abuseipdb.com/api
ABUSEIPDB_API_KEY=your-abuseipdb-key

# ====================================
# GEOLOCATION APIs
# ====================================

# OpenCage Geocoding API (Location intelligence)
# Get free API key from: https://opencagedata.com/api
OPENCAGE_API_KEY=your-geocoding-key

# Google Maps API (Enhanced geolocation)
# Get API key from: https://console.cloud.google.com
GOOGLE_MAPS_API_KEY=your-gmaps-key

# ====================================
# SOCIAL MEDIA APIs (Optional)
# ====================================

# Twitter Bearer Token (Social media monitoring)
# Get from: https://developer.twitter.com
TWITTER_BEARER_TOKEN=your-twitter-token

# GitHub Token (Repository intelligence)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your-github-token

# ====================================
# PERFORMANCE SETTINGS
# ====================================

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=50

# Enable Selenium for JavaScript rendering (true/false)
ENABLE_SELENIUM=false

# User agent string for requests
USER_AGENT=TOXINT/3.0.0 Security Research Tool

# ====================================
# SMART AUTO-PROFILER SETTINGS
# ====================================

# Default report format (html, json, csv, all)
DEFAULT_REPORT_FORMAT=html

# Enable timeline analysis (true/false)
ENABLE_TIMELINE_ANALYSIS=true

# Enable risk assessment scoring (true/false)
RISK_ASSESSMENT_ENABLED=true

# Report output directory
REPORT_OUTPUT_DIR=./reports

# ====================================
# SUBDOMAIN ENUMERATION SETTINGS
# ====================================

# Enable Certificate Transparency (true/false)
ENABLE_CT_LOGS=true

# Enable DNSDumpster scraping (true/false)
ENABLE_DNSDUMPSTER=true

# Enable Chaos API (true/false)
ENABLE_CHAOS_API=true

# Subdomain brute force wordlist size (small, medium, large)
SUBDOMAIN_WORDLIST_SIZE=medium

# ====================================
# DEBUGGING & LOGGING
# ====================================

# Debug mode (true/false)
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=false

